{
  "name": "MAANG Hiring",
  "description": "Chrome extension for MAANG hiring.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "MAANG Hiring",
    "default_icon": {
      "16": "logo192.png",
      "128": "logo192.png"
    },
    "default_popup": "index.html"
  },
  "minimum_chrome_version": "92",
  "background": { 
    "service_worker": "scrapper.js"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/amazon.js"
      ],
      "run_at": "document_start"
    }
  ]
}